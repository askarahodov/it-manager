POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=it_manager
DATABASE_URL=postgresql+asyncpg://postgres:password@db:5432/it_manager
REDIS_URL=redis://redis:6379/0
MASTER_KEY=replace-with-secure
SECRET_KEY=replace-with-secure
FRONTEND_CORS_ORIGINS=http://localhost:4173
ARTIFACTS_DIR=/var/ansible
REPO_SYNC_DIR=/app/data/repos
JSON_LOGS=false

# Notifications (email)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=
SMTP_TLS=true

# Bootstrap admin (создаётся при старте, только если таблица users пуста)
BOOTSTRAP_ADMIN_EMAIL=admin@it.local
BOOTSTRAP_ADMIN_PASSWORD=admin123

# Worker (Automation) hardening
BACKEND_URL=http://backend:8000
WORKER_RECOMPUTE_INTERVAL_SECONDS=60
WORKER_SCHEDULE_POLL_SECONDS=10
WORKER_ROTATION_POLL_SECONDS=60
WORKER_RUN_TIMEOUT_SECONDS=1800
WORKER_RUN_MAX_RETRIES=3
WORKER_RUN_STALE_SECONDS=3600
WORKER_KEEP_SENSITIVE_ARTIFACTS=false
WORKER_USE_ANSIBLE_RUNNER=true
